{
  "name": "backend",
  "version": "0.0.0",
  "repository": "https://github.com/Laurenz1606/forum.git",
  "author": "Laurenz1606 <laurenz1606 <laurenz.rausche@gmail.com>>",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build:compile": "npm run dev:format && npm run build:clean && tsc",
    "build:copy": "rimraf ../bundle/backend/* && recursive-copy dist ../bundle/backend/dist && recursive-copy package.json ../bundle/backend/package.json",
    "build:clean": "rimraf dist",
    "build:full": "npm run build:compile && npm run build:copy && npm run build:clean",
    "console:clear": "node -e \"console.clear()\"",
    "dev:start": "npm run console:clear && cross-env NODE_ENV=development ts-node-dev --require=dotenv/config --respawn --clear --watch .env src/index.ts",
    "dev:format": "prettier --write --config ../.prettierrc.json src",
    "dev:remove-packages": "rimraf node_modules yarn.lock package-lock.json",
    "start": "node ."
  },
  "dependencies": {
    "@authfunctions/express": "^3.3.8",
    "@laurenz1606/logger": "^3.2.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ioredis": "^5.2.4",
    "mongoose": "^6.7.5",
    "slugify": "^1.6.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.10",
    "@types/uuid": "^9.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "prettier": "^2.8.0",
    "recursive-copy-cli": "^1.0.20",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.3"
  }
}
